        <Button x:Name="btn_ResetBridge" 
                Content="RESET BRIDGE" 
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1"
                Margin="16,727,10,0" VerticalAlignment="Top" Height="24"
                FontFamily=".\Resources\#IBM Plex Sans Light" FontWeight="Bold" 
                Background="White" 
