        <Label x:Name="lbl_Status_MotionMode_Value" Content="-" Padding="2" HorizontalAlignment="Left" Height="20" Margin="481,232,0,0" VerticalAlignment="Top" Width="332" FontFamily=".\Resources\#IBM Plex Mono Medium" Foreground="White" FontSize="10" HorizontalContentAlignment="Right"/>

        <Label x:Name="lbl_Status_Tool" Content="TOOL" Padding="2" HorizontalAlignment="Left" Height="20" Margin="370,252,0,0" VerticalAlignment="Top" Width="144" FontFamily=".\Resources\#IBM Plex Mono Light" Foreground="White" FontSize="10"/>
